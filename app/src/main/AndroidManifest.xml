<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gibox.testandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.gibox.testandroid.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestAndroid"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.gibox.testandroid.view.ui.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.gibox.testandroid.view.ui.listuser.ListUserActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.gibox.testandroid.view.ui.splashscreen.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>